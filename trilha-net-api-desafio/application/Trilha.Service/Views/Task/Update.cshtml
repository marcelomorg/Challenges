@model IEnumerable<Trilha.Model.Models.Tarefa>

<head>
  <link rel="stylesheet" href="~/css/Task/update.css" />
</head>
<table class="table table-striped table-hover">
  <thead>
    <tr>
      <th scope="col">@Html.DisplayNameFor(x => x.Id)</th>
      <th scope="col">@Html.DisplayNameFor(x => x.Titulo)</th>
      <th scope="col">@Html.DisplayNameFor(x => x.Descricao)</th>
      <th scope="col">@Html.DisplayNameFor(x => x.Data)</th>
      <th scope="col">@Html.DisplayNameFor(x => x.Status)</th>
      <th>Ação</th>
    </tr>
  </thead>
  <tbody>
    @foreach (var item in Model)
    {
      <tr>
        <th scope="row">@Html.DisplayFor(x => item.Id)</th>
        <td>@Html.DisplayFor(x => item.Titulo)</td>
        <td>@Html.DisplayFor(x => item.Descricao)</td>
        <td>@Html.DisplayFor(x => item.Data)</td>
        <td>@Html.DisplayFor(x => item.Status)</td>
        <td>
          <button type="button" class="btn btn-secondary btn-sm">
            <span>
              @Html.ActionLink("Editar", "UpdateEdit", new {id=item.Id}, new {style="text-decoration:none; color:white;"})
            </span>
          </button>
        </td>
      </tr>
    }
  </tbody>
</table>